        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-typescript": "^6.1.0",
        "@types/bytebuffer": "^5.0.37",
        "@types/jest": "^26.0.15",
        "@types/jszip": "^3.1.6",
        "@types/long": "^4.0.1",
        "@types/node": "^14.14.9",
        "@types/pako": "^1.0.1",
        "@types/three": "^0.127.0",
        "@types/uuid": "^7.0.2",
        "@types/yauzl": "^2.9.1",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
