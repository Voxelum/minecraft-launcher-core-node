{
    "private": true,
    "version": "4.3.2",
    "scripts": {
        "build": "npm run lint && npm run compile && npm run build:definition && npm run build:readme",
        "build:clean": "node scripts/clean.js",
        "build:definition": "node scripts/generate-definition.js",
        "build:readme": "node scripts/build-readme.js",
        "build:docs": "node scripts/build-docs.js",
        "build:web": "vite build",
        "compile": "rollup -c rollup.config.js",
        "compile:watch": "rollup -c rollup.config.js --watch",
        "compile:dry": "tsc --noEmit",
        "lint": "eslint packages --ext .ts",
        "lint:fix": "eslint packages --ext .ts --fix",
        "test": "jest packages --runInBand",
        "test:e2e": "jest packages/installer/e2e.test.ts --verbose --runInBand",
        "test:full": "jest packages/installer/e2e.test.ts --verbose --runInBand && jest packages --coverage --verbose --runInBand",
        "dev": "rollup scripts/dev.js",
        "dev:web": "vite",
        "publish": "node scripts/publish.js",
        "publish:beta": "node scripts/publish.js beta"
    },
    "workspaces": [
        "packages/asm",
        "packages/client",
        "packages/core",
        "packages/curseforge",
        "packages/forge-site-parser",
        "packages/gamesetting",
        "packages/installer",
        "packages/mod-parser",
        "packages/model",
        "packages/nbt",
        "packages/resourcepack",
        "packages/server-info",
        "packages/system",
        "packages/task",
        "packages/text-component",
        "packages/unzip",
        "packages/user",
        "packages/world"
    ],
    "devDependencies": {
