{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "ESNext",
        "module": "esnext",
        "moduleResolution": "node",
        "newLine": "LF",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "packages/asm/**/*.ts",
        "packages/client/**/*.ts",
        "packages/core/**/*.ts",
        "packages/curseforge/**/*.ts",
        "packages/forge-site-parser/**/*.ts",
        "packages/gamesetting/**/*.ts",
        "packages/installer/**/*.ts",
        "packages/modrinth/**/*.ts",
        "packages/mod-parser/**/*.ts",
        "packages/model/**/*.ts",
        "packages/nbt/**/*.ts",
        "packages/resourcepack/**/*.ts",
        "packages/server-info/**/*.ts",
        "packages/system/**/*.ts",
        "packages/task/**/*.ts",
        "packages/text-component/**/*.ts",
        "packages/unzip/**/*.ts",
        "packages/user/**/*.ts",
        "packages/world/**/*.ts"
    ],
    "exclude": [
        "packages/**/*.d.ts",
        "node_modules/**/*"
    ],
}